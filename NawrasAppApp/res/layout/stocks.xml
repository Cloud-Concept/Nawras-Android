<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content" android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:text="Product"
            android:padding="5dp"
            android:gravity="center|left"
            android:textColor="@color/black"
            android:layout_height="wrap_content" android:layout_weight="2.5"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="QTY\nAvailabillity"
            android:padding="5dp"
            android:gravity="center|left"
            android:textColor="@color/black"
            android:layout_height="wrap_content" android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Of\nFacing"
            android:padding="5dp"
            android:gravity="center|left"
            android:textColor="@color/black"
            android:layout_height="wrap_content" android:layout_weight="1"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:weightSum="3.8"
        android:layout_height="wrap_content" android:orientation="horizontal" >

        <EditText
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:id="@+id/etProduct"
            android:textColor="@color/black"
            android:singleLine="true"
            android:minWidth="48dp"
            android:maxWidth="48dp"
            android:layout_height="wrap_content" android:layout_weight="2"/>

         <EditText
            android:layout_width="wrap_content"
             android:layout_marginRight="5dp"
             android:id="@+id/etQTYAvailabillity"
             android:layout_marginLeft="5dp"
             android:minWidth="48dp"
             android:singleLine="true"
             android:inputType="number"
             android:maxWidth="48dp"
             android:textColor="@color/black"
            android:layout_height="wrap_content" android:layout_weight="0.8"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_marginRight="5dp"
            android:id="@+id/etOfFacing"
            android:singleLine="true"
            android:minWidth="48dp"
            android:inputType="number"
            android:maxWidth="48dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content" android:layout_weight="1"/>


    </LinearLayout>


    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="Save"
        android:textColor="@color/white"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_selector"
        />

</LinearLayout>